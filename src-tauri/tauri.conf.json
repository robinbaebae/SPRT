{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SPRT",
  "version": "0.1.0",
  "identifier": "com.claudemonitor.dev",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "SPRT",
        "width": 312,
        "height": 448,
        "resizable": false,
        "visible": false,
        "alwaysOnTop": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "skipTaskbar": true
      },
      {
        "label": "popover",
        "title": "",
        "url": "index.html",
        "width": 250,
        "height": 100,
        "resizable": false,
        "visible": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "focus": false,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["icons/tray-icon.png", "icons/tray-icon@2x.png"],
    "category": "DeveloperTool",
    "macOS": {
      "minimumSystemVersion": "13.0"
    }
  }
}
